<% layout("/layouts/boilerplate") -%>

<div class="booking container mt-5">
    <h2>My Bookings</h2>
    <br>
    <% if (bookings.length === 0) { %>
        <p>You have no bookings yet.</p>
    <% } else { %>
        <ul class="list-group">
            <% bookings.forEach(booking => { %>
  <li class="list-group-item ">
    <div class="book">
    <div>
    <img src="<%= booking.listingRef.image.url %>" width="150" />
    </div>
    <div>
    
    
    <h5>Your Booking Title: <%= booking.title %></h5>
    <p><strong>Guests:</strong> <%= booking.guest %></p>
    <p><strong>Check-in:</strong> <%= booking.checkin.toDateString() %></p>
    <p><strong>Check-out:</strong> <%= booking.checkout.toDateString() %></p>
    </div>
    <div class="ms-auto">
      <a href="/listings/<%= booking.listingRef._id %>" class= "btnn">Visit</a>
    </div>
    </div>
  </li>
<% }) %>
        </ul>
    <% } %>
    <br>
    <br>
</div>