<% layout("/layouts/boilerplate") -%>

<body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listing/new">
        <button>Create Listing</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
        <% for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%>" class="listing-links">
            <div class="card col listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top" style="height: 20rem;">
                <div class="card-body">
                    <h5 class="card-text"><b><%=listing.title%></b></h5>
                    <p class="card-price">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/Night</p>
                </div>
            </div>
        </a>
            <!-- <li><a href="/listing/<%=listing._id%>"><%=listing.title%></a></li> -->
            <% } %>
    </div>
</body>