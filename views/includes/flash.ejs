<% if(success && success.length){%>

<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" style="height: 42px;">
    <%=success%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="height: 3px;">
    </button>
</div>
<%}%>
<% if(error && error.length){%>

    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="height: 42px;">
        <%=error%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="height: 3px;">
        </button>
    </div>
<%}%>