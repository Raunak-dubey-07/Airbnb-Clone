<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        
        <div class="col-8 offset-3">
            <h1>Signup on AutoTravel</h1>
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
            <lable for="username" class="form-label"><b>Username</b></lable>
            <input name="username"type="text"class="form-control" required/>
            <div class="invalid-feedback">Enter a valid Title</div>
            <div class="valid-feedback">Looks good</div>
        </div>
        <div class="mb-3">
            <lable for="Email" class="form-label"><b>Email</b></lable>
            <input name="Email"type="Email"class="form-control" required/>
        </div>
         <div class="mb-3">
            <lable for="password" class="form-label"><b>Password</b></lable>
            <input name="password"type="password"class="form-control" required/>
        </div>
        <button class="btn btn-success">SignUp</button>
            </form>

        </div>
    </div>